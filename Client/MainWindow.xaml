<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TCP Messenger" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Connection Section -->
        <GroupBox Grid.Row="0" Grid.ColumnSpan="2" Header="Connection" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="Server:" VerticalAlignment="Center"/>
                <TextBox x:Name="ServerTextBox" Text="localhost" Width="100" Margin="5,0" IsReadOnly="True"/>
                <Label Content="Port:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox x:Name="PortTextBox" Text="8888" Width="60" Margin="5,0" IsReadOnly="True"/>
                <Label Content="Username:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox x:Name="UsernameTextBox" Width="120" Margin="5,0" IsReadOnly="True"/>
                <Button x:Name="ConnectButton" Content="Disconnect" Click="ConnectButton_Click" Margin="10,0,0,0" Padding="10,5"/>
            </StackPanel>
        </GroupBox>

        <!-- Status -->
        <TextBlock x:Name="StatusTextBlock" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,10" Foreground="Gray"/>

        <!-- Received Messages -->
        <GroupBox Grid.Row="2" Grid.Column="0" Header="Received Messages" Margin="0,0,5,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListBox x:Name="MessagesListBox" Grid.Row="0" Margin="5"/>
                <Button x:Name="RefreshButton" Content="Refresh Messages" Click="RefreshButton_Click" Grid.Row="1" Margin="5" HorizontalAlignment="Right" Padding="10,5"/>
            </Grid>
        </GroupBox>

        <!-- Registered Users List -->
        <GroupBox Grid.Row="2" Grid.Column="1" Header="Registered Users" Margin="5,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListBox x:Name="UsersListBox" Grid.Row="0" Margin="5"/>
                <Button x:Name="RefreshUsersButton" Content="Refresh Users" Click="RefreshUsersButton_Click" Grid.Row="1" Margin="5" HorizontalAlignment="Right" Padding="10,5"/>
            </Grid>
        </GroupBox>

        <!-- Send Message Section -->
        <GroupBox Grid.Row="3" Grid.ColumnSpan="2" Header="Send Message" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="To:" VerticalAlignment="Center"/>
                    <TextBox x:Name="ToUserTextBox" Width="150" Margin="5,0"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Label Content="Message:" VerticalAlignment="Center"/>
                    <TextBox x:Name="MessageTextBox" Width="400" Margin="5,0"/>
                    <Button x:Name="SendButton" Content="Send" Click="SendButton_Click" Margin="10,0,0,0" Padding="10,5"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Message History -->
        <GroupBox Grid.Row="4" Grid.ColumnSpan="2" Header="Message History">
            <ListBox x:Name="HistoryListBox" Margin="5"/>
        </GroupBox>
    </Grid>
</Window>

