<Window x:Class="Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - TCP Messenger" Height="435" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="28.84"/>
            <RowDefinition Height="6"/>
            <RowDefinition/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="52.2"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="TCP Messenger Login" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,2" Width="202"/>

        <StackPanel Grid.Row="2" VerticalAlignment="Center" Height="276">
            <GroupBox Header="Server Settings" Margin="0,0,0,15" Height="120">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="Server:" Width="80"/>
                        <TextBox x:Name="ServerTextBox" Text="localhost" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="Port:" Width="80"/>
                        <TextBox x:Name="PortTextBox" Text="8888" Width="200"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Authentication">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="Username:" Width="80"/>
                        <TextBox x:Name="UsernameTextBox" Width="200"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Label Content="Password:" Width="80"/>
                        <PasswordBox x:Name="PasswordBox" Width="200"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <TextBlock x:Name="StatusTextBlock" Margin="0,15,0,0" 
                       TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0" Width="180">
            <Button x:Name="RegisterButton" Content="Register" Click="RegisterButton_Click" 
                    Padding="15,5" MinWidth="80" MinHeight="25" Margin="5"/>
            <Button x:Name="LoginButton" Content="Login" Click="LoginButton_Click" 
                    Padding="15,5" MinWidth="80" MinHeight="25" Margin="5" IsDefault="True" Width="63"/>
        </StackPanel>
    </Grid>
</Window>

